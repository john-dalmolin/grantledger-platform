{
  "name": "grantledger-platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run --workspaces --if-present build",
    "lint": "eslint \"{apps,packages}/**/*.ts\"",
    "test": "vitest run",
    "typecheck": "tsc -b",
    "test:watch": "vitest",
    "quality:gate": "npm run lint && npm run typecheck && npm run build && npm run test",
    "test:workspaces": "npm run --workspaces --if-present test",
    "test:pg": "RUN_PG_TESTS=1 vitest run packages/infra-postgres/src",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:migrate": "node ./scripts/db-migrate.mjs"
  },
  "packageManager": "npm@10.9.2",
  "engines": {
    "node": ">=22 <23",
    "npm": ">=10 <11"
  },
  "devDependencies": {
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^8.57.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  }
}