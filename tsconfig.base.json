{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@grantledger/shared": ["packages/shared/src"],
      "@grantledger/contracts": ["packages/contracts/src"],
      "@grantledger/domain": ["packages/domain/src"],
      "@grantledger/application": ["packages/application/src"],
      "@grantledger/infra-postgres": ["packages/infra-postgres/src"]
    },
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "types": ["node"]
  }
}
